# ============================================
# DATABASE CONFIGURATION (REQUIRED)
# ============================================
# PostgreSQL connection string
# Format: postgresql://[user[:password]@][netloc][:port][/dbname][?param1=value1&...]
# Examples:
#   - postgresql://localhost/live_polling_db (local default)
#   - postgresql://user:pass@db.example.com:5432/polling (remote)
#   - postgresql://user@localhost/polling?sslmode=require (with SSL)
DATABASE_URL="postgresql://user:password@localhost:5432/live_polling_db"

# ============================================
# SERVER CONFIGURATION
# ============================================
# Node environment
NODE_ENV="development"

# Server port
PORT=3000

# Authentication secret (minimum 32 characters, change for production)
NEXTAUTH_SECRET="your-secret-key-minimum-32-characters-long-change-this"

# ============================================
# SOCKET.IO CONFIGURATION
# ============================================
# Socket.io server URL (public URL for clients)
# Change to your deployed server URL in production
NEXT_PUBLIC_SOCKET_URL="http://localhost:3000"

# ============================================
# OPTIONAL: MONITORING & ANALYTICS
# ============================================
# Enable debug logging (development only)
DEBUG="false"

# Sentry error tracking (optional)
# SENTRY_DSN="https://key@sentry.io/project"

# Google Analytics (optional)
# NEXT_PUBLIC_GA_ID="G-XXXXXX"
